    }

    public void printGroceryList()
    {
        System.out.println("You have " + groceryList.size() + " items in your grocery list costing " + groceryList.costOfList(());
        int i=1;
        for (GroceryItem item :groceryList)
        {
            System.out.println(i + ". " + item);
            i++;
        }
    }

    public float costOfList()
    {
        float totalCost =0;
        for(GroceryItem item: groceryList)
        {
            totalCost += item.getPrice();
        }
        return totalCost;
    }
