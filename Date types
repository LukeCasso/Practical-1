    private static void investigateIntegers()
    {
        int myValue = 10000;

        int myMinValue = Integer.MIN_VALUE;
        int myMaxValue = Integer.MAX_VALUE;

        System.out.println(myMinValue + 1);
        System.out.println(myMaxValue - 1);

